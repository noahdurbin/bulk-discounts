<%= render partial: "shared/nav" %>

<p>New Discount</p>

<%= form_with url: merchant_discounts_path(@merchant), method: :post, data: {turbo: false} do |f| %>
  <%= f.label :percentage, "Percentage" %>
  <%= f.text_field :percentage, min: 0, max: 100 %>
  <br>
  <%= f.label :quantity_threshold, "Quantity Threshold" %>
  <%= f.text_field :quantity_threshold %>
  <br>
  <%= f.submit "Create Discount"%>
<% end %>
