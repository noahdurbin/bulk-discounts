<%= render partial: "shared/nav" %>

<p>My Discounts</p>

<% @discounts.each do |discount| %>
  <p><%= "#{discount.percent_off}% off #{discount.quantity_threshold} items or more" %></p>
  <p><%= link_to "Discount #{discount.id}", merchant_discount_path(@merchant, discount) %></p>
  <p><%= button_to "Delete Discount #{discount.id}", merchant_discount_path(@merchant, discount), method: :delete %></p>
  <% end %>

<p><%= link_to "Create New Discount", new_merchant_discount_path(@merchant) %></p>
